<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#70c9e3" />
      <stroke
          android:width="0dp"
          android:color="#19667d" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#70c9e3"
          android:endColor="#39a0be"
          android:angle="270" />
      <stroke
          android:width="0dp"
          android:color="#19667d" />
      <corners
          android:radius="6dp" />
       <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />

    </shape>
  </item>
</selector>