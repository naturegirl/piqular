<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="blueButton">
        <item name="android:layout_marginLeft">60dip</item>
        <item name="android:layout_marginRight">60dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>
    <style name="galleryButton">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>
    <!-- copy and share buttons -->
    <style name="actionButton">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:drawablePadding">-10dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
    </style>
    
</resources>
